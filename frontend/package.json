{
	"name": "todos",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build-integration": "vite build --mode integration",
		"preview": "vite preview --port 5174",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"open-api:generate:linux": "rm -rf ./src/lib/generated-client && env-cmd npm run open-api:generate:shared && env-cmd npm run open-api:zod:linux",
		"open-api:generate:windows": "(rmdir /s /q .\\src\\lib\\generated-client || dir) && env-cmd npm run open-api:generate:shared && env-cmd npm run open-api:zod:windows",
		"open-api:generate:shared": "node generate-openapitools-json.js && openapi-generator-cli generate --generator-key typescript-fetch",
		"open-api:zod:linux": "mkdirp ./src/lib/generated-client/zod && typed-openapi $PUBLIC_API_URL/openapi.json -o ./src/lib/generated-client/zod/schemas.ts --runtime zod && npm run open-api:zod:shared",
		"open-api:zod:windows": "mkdir .\\src\\lib\\generated-client\\zod && typed-openapi %PUBLIC_API_URL%/openapi.json -o ./src/lib/generated-client/zod/schemas.ts --runtime zod && npm run open-api:zod:shared",
		"open-api:zod:shared": "node extract-zod.js"
	},
	"devDependencies": {
		"@openapitools/openapi-generator-cli": "^2.13.4",
		"@playwright/test": "^1.44.1",
		"@sveltejs/adapter-auto": "^3.2.1",
		"@sveltejs/adapter-node": "^4.0.1",
		"@sveltejs/adapter-vercel": "^5.3.0",
		"@sveltejs/kit": "^2.5.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@tailwindcss/typography": "^0.5.13",
		"@testing-library/svelte": "^5.1.0",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"@vitest/ui": "^1.6.0",
		"autoprefixer": "^10.4.19",
		"dotenv": "^16.4.5",
		"env-cmd": "^10.1.0",
		"eslint": "^9.3.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.0",
		"openapi-typescript-codegen": "^0.27.0",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "5.0.0-next.144",
		"svelte-check": "^3.8.0",
		"svelte-fa": "^4.0.2",
		"tailwindcss": "^3.4.3",
		"ts-to-zod": "^3.8.5",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.12",
		"vitest": "^1.6.0",
		"vitest-dom": "^0.1.1"
	},
	"type": "module",
	"dependencies": {
		"@fortawesome/free-brands-svg-icons": "^6.5.2",
		"@fortawesome/free-regular-svg-icons": "^6.5.2",
		"@fortawesome/free-solid-svg-icons": "^6.5.2",
		"@types/eslint": "^8.56.10",
		"@types/js-cookie": "^3.0.6",
		"ajv": "^8.14.0",
		"daisyui": "^4.11.1",
		"globals": "^15.3.0",
		"jose": "^5.3.0",
		"js-cookie": "^3.0.5",
		"jsdom": "^24.1.0",
		"typed-openapi": "^0.4.1",
		"zod": "^3.23.8"
	}
}
